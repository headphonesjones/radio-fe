body
  header
    a(href="/")
      img#logo(src="/img/logo.png")
    nav(ng-controller = 'navCtrl')
      include includes/_nav
    img#home_image(ng-controller = 'navCtrl', ng-src = '/img/station.jpg', ng-show = 'isHome()')

    .container
      article(ng-view = true)
      aside#sidebar(ng-controller = 'sidebarController')
        include includes/_sidebar

    footer
      include includes/_footer

    #player_fixed
      include includes/_player


